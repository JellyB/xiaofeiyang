/* miniprogram/pages/exam/exam.wxss */
.page{
    position: relative;
    background-color: #fef8ea;
    background-size: 100% auto; 
    padding-top: 250rpx;
}
.page .footer{
    z-index: 1;
    position: absolute;
    bottom: 0;
}
.page .footer image{
    z-index: 1;
}

.page .footer image{
    z-index: 1;
}

.page .body{
    width: 700rpx;
    margin: 0 auto;
    background: #fff;
    padding: 50rpx 10rpx;
}

.page .body .image{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;

}
.page .body .image .typename{
    width: 360rpx;
    height:100rpx;
    margin-top: -105rpx;
    background: url(http://file.xiaomutong.com.cn/img202006192330.png) no-repeat center;
    background-size: 100% auto;
    text-align: center;
   
}

.page .body .image .value{
    color: #fff;
}

.page .body .question{
    padding: 0 20rpx;
}

.page .body .question .title{
    padding: 20rpx 0;
}

.page .body .question .options{

}

.page .body .question .options .option{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    color: #333;
    font-size: 28rpx;
    padding: 10rpx 10rpx 0;
    margin-bottom: 25rpx;
    line-height: 1.5;
    cursor: pointer;
    border: 2rpx solid #bfbfbf;
    
}
.page .body .question .options .selected{
    border: 2rpx solid #f82809;
    color: #fff;
    background: #f82809;
}
.page .body .question .options .green{
    color: #34a30a;
    border: 2rpx solid #34a30a;
    border-left: 10rpx solid #34a30a;
    background-image:url("http://file.xiaomutong.com.cn/20200701/true.png");
    background-repeat: no-repeat;
    background-position: right center;
    background-size: auto 30rpx;
}
.page .body .question .options .red{
    color: #f82809;
    border: 2rpx solid #f82809;
    border-left: 10rpx solid #f82809;
    background-image:url("http://file.xiaomutong.com.cn/20200701/false.png");
    background-repeat: no-repeat;
    background-position: right center;
    background-size: auto 30rpx;
}
.page .body .btn-area{
    z-index: 99;
    padding: 20rpx;
}
.page .body .btn-area .button{
    z-index: 99;
    background: #f82809;
    box-shadow: 2rpx 2rpx 6rpx #f82809;
    border-radius: 3rpx;
    text-align: center;
    font-size: 25rpx;
    color: #fff;
    padding: 20rpx 0;

}

.page .message{
    padding-left: 20rpx;
    color: #f82809;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
}
.page .modal{
    /* background: url(http://file.xiaomutong.com.cn/img202006201500.png) no-repeat center top; */
    z-index: 99;
    border: 1px solid #f82809;
    box-shadow: 1px 1px 3px #f82809;
    background-color: #fef8ea;
    background-size: 100% auto; 
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    width: 350rpx;
    height: 507rpx;
    padding: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}
.page .modal .btn-area{
    position: absolute;
    bottom: 100rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}
.page .modal .button{
    z-index: 99;
    width: 200rpx;
    height: 95rpx;
    background-color: #f82809;
    color: #fff;
    text-align: center;
    border-radius: 12rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;

}
.page .modal .button button{
    opacity: 1;
    width: 100%;
    height: 40px;
    line-height: 40px;
    background-color: #f82809;
    color: #fff;
    font-size: 16px;
    font-weight: normal;
    padding: 0;

}